 1 file changed, 19 insertions(+)

diff --git a/src/Jira/Api.php b/src/Jira/Api.php
index 2c642a5..8e4a655 100644
--- a/src/Jira/Api.php
+++ b/src/Jira/Api.php
@@ -441,6 +441,25 @@ class Api
     }
 
     /**
+     * create a remote link
+     *
+     * @param $issue
+     * @param array $data
+     * @return mixed
+     */
+    public function createRemotelink($issue, $data = array())
+    {
+        $object =
+                array(
+                    "object" => $data
+                );
+
+        return $this->api(self::REQUEST_POST,
+                            "/rest/api/2/issue/" . $issue . "/remotelink",
+                            $object, true);
+    }
+
